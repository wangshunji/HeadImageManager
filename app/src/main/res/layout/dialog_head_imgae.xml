<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#50FFFFFF"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:id="@+id/ll_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_item_bg">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@drawable/dialog_title_bg"
            android:text="你可以将照片上传至照片墙"
            android:textColor="@color/color_write"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_album_upload"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dialog_item_album"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_setting_amble" />

            <TextView
                android:id="@+id/tv_dialog_item_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="13dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/amble_upload"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3" />

        <LinearLayout
            android:id="@+id/ll_camera_upload"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_dialog_item_camera"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_setting_photo" />

            <TextView
                android:id="@+id/tv_dialog_item_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="13dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/take_photo_upload"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/dialog_item_bg"
        android:gravity="center"
       android:layout_below="@+id/ll_dialog"
        android:text="@string/cancel"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>
